<title>Character Creator</title>
<center><h1>Character Creator</h1></center>

<center>
    
    <div class='CCBox'>
        <form action="/char_create" method="post">
    <table>
       <tr>
           <td>
               <label>Strength:</label>
              </td><td>
               <input  type="number" max="18" onclick='clicked(this)' min="3"
                    id = "str" name = 'str'/>
           </td>
           
           <td>
                <label>Race:</label>
                </td><td>
                <select id='race' name='race'>
                    <option title='+2 Constitution' value=0>Dwarf</option>
                    <option title='+2 Dexterity' value=1>Elf</option>
                    <option title='+2 Dexterity'value=2>Halfling</option>
                    <option title='+1 to all stats'value=3>Human</option>
                    <option title='+2 Strength, +1 Charisma'value=4>Dragonborn</option>
                    <option title='+2 Intelligence'value=5>Gnome</option>
                    <option title='+2 Charisma'value=6>Half-Elf</option>
                    <option title='+2 Strength, +1 Consitituion'value=7>Half-Orc</option>
                    <option title='+1 Intelligence, +2 Charisma'value=8>Tiefling</option>
                </select>
            </td>
           
       </tr>
       
       <tr>
           <td>
                <label>Dexterity:</label>
               </td><td>
                <input  type="number" max="18" onclick='clicked(this)' min="3"
                    id = "dex" name = 'dex'/>
           </td>
           
           <td>
                <label>Class:</label>
                </td><td>
                <select id='class' name = 'class'>
                    <option value=0>Barbarian</option>
                    <option value=1>Bard</option>
                    <option value=2>Cleric</option>
                    <option value=3>Druid</option>
                    <option value=4>Fighter</option>
                    <option value=5>Monk</option>
                    <option value=6>Paladin</option>
                    <option value=7>Ranger</option>
                    <option value=8>Rogue</option>
                    <option value=9>Sorcerer</option>
                    <option value=10>Warlock</option>
                    <option value=11>Wizard</option>
                </select>
            </td>
           
       </tr>
       
       <tr>
           <td>
                <label>Constitution:</label>
               </td><td>
                <input  type="number" max="18" onclick='clicked(this)' min="3"
                    id = "con" name = 'con'/>
           </td>
       </tr>
       
       <tr>
           <td>
                <label>Intelligence:</label>
               </td><td>
                <input  type="number" max="18" onclick='clicked(this)' min="3"
                    id = "int" name = 'int'/>
           </td>
       </tr>
       
       <tr>
           <td>
                <label>Wisdom:</label>
               </td><td>
                <input  type="number" max="18" onclick='clicked(this)' min="3"
                    id = "wis" name = 'wis'/>
           </td>
       </tr>
       
       <tr>
           <td>
                <label>Charisma:</label>
               </td><td>
                <input  type="number" max="18" onclick='clicked(this)' min="3"
                    id = "cha" name = 'cha'/>
           </td>
       </tr>
        
        <tr>
            <td>
                <label>Name:</label>
            </td><td>
                <input type="text" 
                    id = "name" name = 'name' />
            </td>
        </tr>
        
        <tr>
            <td>
                <label>Character Tags:</label>
            </td><td>
                <input type = "text"
                    id = "label" name = 'label' />
            </td>
        </tr>
    </table>
    
    <br><br>
    <input type="submit" value='submit'/>
    </div>
    
     <iframe id='display' class='IFBox' style='width:15%;height: 400px' src='/md.html'></iframe>
     
    </form>
</center>
<a href = '/welcome/index'>Home</a>

<script>
    var selectedValue = 0;
    var isSelected = 0;
    var selectedID = 0;
    function clicked(pid)
    {
        if(isSelected == 1) {
        pid.value = selectedValue;
        pid.onclick = "";
        isSelected = 0;
        selectedValue=0;
        var xer = display.contentDocument.getElementById('display').contentDocument.getElementById(selectedID);
        xer.setAttribute('class','dclicked');
        xer.onclick='';
        }
    }
</script>
<script>
    function unTitle()
    {
        document.getElementsByTagName('title')[0].outerHTML = "";
    }
    window.onload=unTitle();
</script>